{
"manifest_version": 2,
    "name": "Name Replacement",
    "description": "Name Replacement",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
              "jquery-3.3.1.min.js",
              "names.js",
              "content.js",
              "popup.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "clearSetName.js",
            "getNewName.js"
        ],
        "persistent": false
    },
    "permissions": [
          "storage",
          "*://*/*",
          "tabs"
    ],
    "browser_action":
      {
        "default_popup": "popup.html",
        "default_title": "Name Replacement"
      }
}
